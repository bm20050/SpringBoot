package edu.pnu.controller;

import java.util.List;

import org.springframework.web.bind.annotation.DeleteMapping;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.PutMapping;
import org.springframework.web.bind.annotation.RestController;

import edu.pnu.domain.MemberVO;
import edu.pnu.service.BoardService;

@RestController
public class BoardController {
	
	BoardService bs = new BoardService();
	
	public BoardController() {
		System.out.println("===> BoardController생성");
	}
	
	@GetMapping("/getMembers")
	public List<MemberVO> getMembers(){
		return bs.getMembers();
	}
	
	@GetMapping("/getMembers/{id}")
	public MemberVO getMember(@PathVariable Integer id) {
		return bs.getMember(id);
	}
	
	@PostMapping("/addMember")
	public MemberVO addMember(MemberVO memberVO) {
		return bs.addMember(memberVO);
	}
	
	@PutMapping("/updateMember")
	public MemberVO updateMember(MemberVO memberVO) {
		return bs.updateMember(memberVO);
	}
	
	@DeleteMapping("/deleteMember/{id}")
	public MemberVO removeMember(@PathVariable Integer id) {
		return bs.removeMember(id);
	}
}
